<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>no-index</id>
    <formats>
        <format>zip</format>
    </formats>

    <baseDirectory>${project.build.finalName}</baseDirectory>

    <!-- Add distribution files -->
    <fileSets>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory/>
            <filtered>true</filtered>
            <includes>
                <include>/cli-version.txt</include>
                <include>/README.txt</include>
                <include>/bash-completion/cli</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory/>
            <filtered>false</filtered>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>/cli-version.txt</exclude>
                <exclude>/README.txt</exclude>
                <exclude>/bash-completion/cli</exclude>
                <exclude>/bin/**</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>${project.build.directory}/addons</directory>
            <outputDirectory>addons</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/cache</directory>
            <outputDirectory>cache</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/rules</directory>
            <outputDirectory>rules/migration-core</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>*/rewrite.yml</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/rules/openrewrite</directory>
            <outputDirectory>rules/openrewrite</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>src/main/resources-${product-name}</directory>
            <outputDirectory/>
            <filtered>false</filtered>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <excludes>
                <exclude>org.jboss.windup.maven:nexus-indexer-data:zip:*</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>

    <files>
        <file>
            <source>src/main/resources/bin/cli</source>
            <outputDirectory>/bin</outputDirectory>
            <filtered>false</filtered>
            <destName>${product-name}-cli</destName>
        </file>
        <file>
            <source>src/main/resources/bin/cli.bat</source>
            <outputDirectory>/bin</outputDirectory>
            <filtered>false</filtered>
            <destName>${product-name}-cli.bat</destName>
        </file>
    </files>

</assembly>
